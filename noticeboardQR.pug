                                                                            input(type='text' id='econtactno' placeholder='Contact no' maxlength='10' size='60' required)
                                                                    tr(align="center")
                                                                        table(align="center") 
                                                                            tr(align="center")
                                                                                td(align="center") 
                                                                                    label Text
                                                                                    br 
